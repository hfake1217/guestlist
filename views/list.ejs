<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% newListItems.forEach(function(guest){ %>
      <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=guest._id%>" onChange="this.form.submit()">
        <p><%=guest.name%></p>
      </div>
    </form>
    <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newGuest" placeholder="New Guest" autocomplete="off">
        <button type="submit" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
